<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="net.ziegelmeier.statemachine.uml.gen.cpp">
    <property name="ECLIPSE_HOME" value="../../../eclipse/dsl-2021-12/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="net.ziegelmeier.statemachine.uml.gen.cpp.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/net.ziegelmeier.statemachine.uml.gen.cpp/bin"/>
    </path>

    <path id="net.ziegelmeier.statemachine.uml.gen.cpp.classpath">
        <path refid="net.ziegelmeier.statemachine.uml.gen.cpp.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="net.ziegelmeier.statemachine.uml.gen.cpp.libraryclasspath.alljars">
        <pathelement location="../net.ziegelmeier.statemachine.uml.gen.cpp/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="net.ziegelmeier.statemachine.uml.gen.cpp.classpath.alljars">
        <path refid="net.ziegelmeier.statemachine.uml.gen.cpp.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="net.ziegelmeier.statemachine.uml.gen.cpp.main.Generate" classpathref="net.ziegelmeier.statemachine.uml.gen.cpp.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="net.ziegelmeier.statemachine.uml.gen.cpp.main.Generate" classpathref="net.ziegelmeier.statemachine.uml.gen.cpp.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
